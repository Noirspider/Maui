@model Maui.Models.Utente

<div class="login-form">
    <h4>Benvenuto</h4>
    <hr />
    <div class="row">
        <div class="col-12">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label">Nome Utente</label>
                    <input asp-for="Username" class="form-control" placeholder="Inserisci il tuo nome utente" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Password</label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Inserisci la tua password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <input type="submit" value="Accedi" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-danger text-white">Torna alla home</a>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
