@model IEnumerable<Maui.Models.Ordine>

@{
    ViewData["Title"] = "Index";
}
<div class="divform">
<h1>Ordine</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IndirizzoDiConsegna)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataOrdine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEvaso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Utente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IndirizzoDiConsegna)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataOrdine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEvaso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Utente.Password)
            </td>
            <td>
                <a asp-action="ToggleIsEvaso" class="btn btn-success" asp-route-id="@item.IdOrdine">Evaso</a> 
                <a asp-action="Edit" asp-route-id="@item.IdOrdine" class="btn btn-primary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.IdOrdine" class="btn btn-info">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.IdOrdine" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>