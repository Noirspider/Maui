@model Maui.Models.Prodotto

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifica Prodotto</h1>

<hr />
<div class="row BO-input-container">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProdotto" />
            <div class="form-group">
                <label asp-for="NomeProdotto" class="BO-label"></label>
                <input asp-for="NomeProdotto" class="form-control BO-input" />
                <span asp-validation-for="NomeProdotto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgProdotto" class="BO-label"></label>
                <input asp-for="ImgProdotto" class="form-control BO-input" />
                <span asp-validation-for="ImgProdotto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrezzoProdotto" class="BO-label"></label>
                <input asp-for="PrezzoProdotto" class="form-control BO-input" type="text" />
                <span asp-validation-for="PrezzoProdotto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantitaProdotto" class="BO-label"></label>
                <input asp-for="QuantitaProdotto" class="form-control BO-input" />
                <span asp-validation-for="QuantitaProdotto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stile" class="BO-label"></label>
                <input asp-for="Stile" class="form-control BO-input" />
                <span asp-validation-for="Stile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descrizione" class="BO-label"></label>
                <input asp-for="Descrizione" class="form-control BO-input" />
                <span asp-validation-for="Descrizione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volume" class="BO-label"></label>
                <input asp-for="Volume" class="form-control BO-input" />
                <span asp-validation-for="Volume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gradazione" class="BO-label"></label>
                <input asp-for="Gradazione" class="form-control BO-input" />
                <span asp-validation-for="Gradazione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birrificio" class="BO-label"></label>
                <input asp-for="Birrificio" class="form-control BO-input" />
                <span asp-validation-for="Birrificio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nazione" class="BO-label"></label>
                <input asp-for="Nazione" class="form-control BO-input" />
                <span asp-validation-for="Nazione" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Save" class="btn BOP-btn-verde " />
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>

    <div class="col-md-6">
        <img class="BO-img" src="~/img/Birre2.jpg" />
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Torna Indietro</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
